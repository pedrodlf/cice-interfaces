package Matrices;

import java.util.ArrayList;
import java.util.List;

public class Main {

	private static int sub1 = 0;
	private static int sub2 = 0;
	
	public static void main(String[] args) {
		int max = 0;
		int repeticiones = 0;
		List<String> entrada = new ArrayList<>();
		entrada.add("3");
		entrada.add("2 3");
		entrada.add("4 5");
		entrada.add("1 3");
		int[][] corrdenadas =  getArrayCoordenadas(entrada);
		System.out.println("sub1= "+sub1);
		System.out.println("sub2= "+sub2);
		
		int[][] matriz = new int[sub1][sub2];
		
		for(int i =0; i<corrdenadas.length;i++) {
        	int x = corrdenadas[i][0];
        	int y = corrdenadas[i][1];
        	
        	for(int z = 0;z<x;z++){
        		for(int n = 0;n<y;n++){
                   matriz[z][n]=matriz[z][n]+1;
                   if(matriz[z][n]>max)max = matriz[z][n];
                }
            }
        }
		System.out.println("max = "+max);
		for(int i = 0;i<sub1;i++) {
			for(int z = 0;z<sub2;z++) {
	    		System.out.print(matriz[i][z]);
	    		if(matriz[i][z]==max)repeticiones++;
	    	}
			System.out.println();
    	}
		System.out.println("repeticiones = "+repeticiones);

	}

	
	public static int[][] getArrayCoordenadas(List<String> entrada){
        int[][] result;
        int pasos = Integer.parseInt(entrada.get(0));
        result = new int[pasos][2];    
        for(int i =1 ; i<entrada.size();i++){
            String[] coordenadas = entrada.get(i).split(" ");
            int a = Integer.parseInt(coordenadas[0]);
            int b = Integer.parseInt(coordenadas[1]);
            if(a> sub1)sub1 = a;
            if(b> sub1)sub2 = b;
            int [] x = {a,b};
            result[i-1] = x;
            
        }
       
        return result;
    }
	
	
}